<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/text_selected_trainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Trainer:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/title_text_color"
        android:paddingBottom="16dp" />

    <!-- Trainer name display -->
    <TextView
        android:id="@+id/text_trainer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainer Name"
        android:textSize="16sp"
        android:textColor="@color/trainer_name_text_color"
        android:paddingBottom="16dp" />

    <!-- Button to update the trainer -->
    <Button
        android:id="@+id/btn_update_trainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:backgroundTint="@color/update_button_color"
        android:textColor="@color/button_text"
        android:textStyle="bold"
        android:padding="12dp"
        android:elevation="4dp" />

    <!-- Button to delete the trainer -->
    <Button
        android:id="@+id/btn_delete_trainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:backgroundTint="@color/delete_button_color"
        android:textColor="@color/button_text"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp" />
</LinearLayout>
